  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/exec": "^1.1.0",
    "@actions/github": "^5.0.0",
    "@actions/glob": "^0.2.0",
    "@actions/io": "^1.1.1",
    "ajv": "^8.10.0",
    "date-fns": "^2.28.0",
    "escape-string-regexp": "^4.0.0",
    "semver": "^7.3.5"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/semver": "^7.3.9",
    "@types/tmp": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.14.0",
    "@vercel/ncc": "^0.33.3",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "jest": "^27.5.1",
    "jest-circus": "^27.3.1",
    "js-yaml": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.5.1",
    "snapshot-diff": "^0.9.0",
    "timezone-mock": "^1.3.1",
    "tmp-promise": "^3.0.3",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  }
